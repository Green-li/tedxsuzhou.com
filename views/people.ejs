<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="/mdl/material.min.css">
    <script src="/mdl/material.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <style type="text/css">
        .avatar {
            border-radius: 50%;
            border: 4px solid white;
            height: 128px;
            width: 128px;
        }
        .card-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
        }
        .card {
            margin: 10px;
            text-align: center;
        }
        .avatar-wrapper {
            text-align: center;
            position: relative;
            top: -83px;
            margin-bottom: -83px;
            padding: 16px;
        }
    </style>
</head>
<body>
<div class="mdl-layout mdl-js-layout">
    <header class="mdl-layout__header">
        <div class="mdl-layout-icon"></div>
        <div class="mdl-layout__header-row">
            <span class="mdl-layout__title">Simple Layout</span>
            <div class="mdl-layout-spacer"></div>
        </div>
    </header>

    <main class="mdl-layout__content">
        <div class="card-container">
            <%
            for(var i = 0; i < activeUsers.length; i ++) {
                var oneuser = activeUsers[i];
                if(oneuser['id'] == -1) {
                    continue;
                }
                var avatarSrc = oneuser['avatar_template'];
                if(avatarSrc) {
                    oneuser['avatar_template'] = avatarSrc.replace("{size}", "128");
                }
            %>
            <div class="mdl-card mdl-shadow--4dp card">
                <div class="profile-bg" style="height: 160px; background-color: blueviolet;">
                </div>
                <div class="avatar-wrapper">
                    <img class="avatar" src="<%= rootUrl + oneuser['avatar_template']%>">
                </div>
                <div class="user-info">
                    <h2 class="mdl-card__title-text"><%= oneuser['username'] %></h2>
                </div>
                <div class="mdl-card__supporting-text">

                </div>
                <div class="mdl-card__actions">
                    <a href="(URL or function)">Related Action</a>
                </div>
            </div>
            <%
            }
            %>
        </div>
    </main>
</div>

</body>
</html>
